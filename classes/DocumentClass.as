package {	//main part of the game, so we can have stuff like game over screens and pause screens. 	// separates out the stuff we're adding from the rest.	import flash.display.MovieClip;	public class DocumentClass extends MovieClip 	{		public var playScreen:PlatformerMain; 		var gameOverScreen:GameOverText;		var levelCompleteScreen:LevelCompleteText;				public function DocumentClass() 		{			playScreen = new PlatformerMain();			playScreen.addEventListener(AvatarEvent.DEAD, onAvatarDeath); 			playScreen.addEventListener(AvatarEvent.GOAL_REACHED, onAvatarWin);						addChild( playScreen );						gameOverScreen = null;		}				public function onAvatarDeath(avatarEvent:AvatarEvent):void		{			gameOverScreen = new GameOverText();			gameOverScreen.x = 0;			gameOverScreen.y = 0;			addChild( gameOverScreen ); 			playScreen = null;			// Put code here later to restart level...?		}				public function onAvatarWin(avatarEvent:AvatarEvent):void		{			levelCompleteScreen = new LevelCompleteText();			levelCompleteScreen.x = 0;			levelCompleteScreen.y = 0;			addChild( levelCompleteScreen ); 			playScreen = null;		}	}}