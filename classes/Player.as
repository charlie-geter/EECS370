package {	import flash.display.MovieClip;	public class Player extends MovieClip	{		public var dx;		public var dy;		public var onPlatform:Boolean = false;		public var floor:MovieClip;		public var wall:MovieClip;		public var onWall:Number = 0;//-1 = wall on left, 1 = wall on right, 0 = no wall		public function Player(in_x:Number, in_y:Number)		{			x = in_x;			y = in_y;			dx = 0;			dy = 0;					}				public function Land(new_floor:MovieClip)		{			floor = new_floor;			onPlatform = true;			dy = 0;		}		public function HitWall(new_wall:MovieClip)		{			wall = new_wall;		}		public function CheckFloor()		{			if(x < (floor.x - floor.width/2) || x > (floor.x + floor.width/2)){				onPlatform = false;				floor = null;			}		}		public function CheckWall()		{			if(y < (wall.y - wall.height/2) || y > (wall.y + wall.height/2)){				onWall = 0;				wall = null;			}		}	}}